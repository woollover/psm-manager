{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": ["GATEWAY_URL"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "fullstack": {
      "dependsOn": ["dev"]
    },

    "sst": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "dependsOn": ["^sst"],
      "env": ["NEXT_PUBLIC_GATEWAY_URL"],
      "cache": false,
      "persistent": true
    }
  }
}
